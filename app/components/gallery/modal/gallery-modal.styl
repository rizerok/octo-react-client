@import '~styles/env/entry.styl';
.gallery
	width: 100vw;
	height: 100vh;
	display: block;
	position: absolute;
	top: 0;
	left:0;
.body
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	position: relative;
	align-items: center;
.bodyArea
	position: relative;
	display: flex;
	justify-content: center;
	align-items: center;

.arrow
	position: absolute;
	width: 9em;
	height: 9em;
	cursor: pointer;
	outline: none;
	top: 50%;
	color:#fff;
	+below($breakpoints.md)
		transform: translate(0, -50%);
		width: $screen-indents-mobile - (1.7rem / 2);

		.arrowLeft
			left: ($screen-indents-mobile - 1.7rem ) * -1;

		.arrowRight
			right: ($screen-indents-mobile - 1.7rem) * -1;

.arrowLeft
	left: 0;
	transform: translate(-100%, -50%);
	z-index:1;
	+below($breakpoints.md)
		transform: translate(0, -50%);
		width: $screen-indents-mobile - (1.7rem / 2);
		left: ($screen-indents-mobile + 1.7rem ) /** -1*/;

.arrowRight
	right: 0;
	transform: translate(100%, -50%);
	z-index:1;
	+below($breakpoints.md)
		transform: translate(0, -50%);
		width: $screen-indents-mobile - (1.7rem / 2);
		right: ($screen-indents-mobile + 1.7rem) /** -1*/;

.socketImage
	display: flex;
	justify-content: center;
	align-items: center;
	transition:opacity $glb-anim-drt;

.image
	max-width 100%;
	max-height: 100%;

.preloader
	transition:opacity $glb-anim-drt;