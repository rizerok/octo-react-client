.container
	position:fixed;
	left:0;
	top:0;
	bottom:0;
	z-index:2;
	width:400px;
	max-width:100%;
	//background:rgba(red,10%);
	transform:translateX(-100%);
	transition:transform .3s;
	padding-top:12em;
	background:#174B58;

.isActive
	transform:translateX(0%)

.closeButton
	position:absolute;
	top:0;
	left:3em;
	display inline-block
	margin 2.4em 2.4em 0 0
	width 2.4em
	height 2.4em
	transition opacity .25s
	opacity .7
	cursor:pointer;

	&:before
		transform: translate(-50%) rotate(45deg);

	&:after
		transform: translate(-50%) rotate(-45deg);

	&:before,
	&:after
		content: '';
		position: absolute;
		top: 50%;
		left: 50%;
		width: 100%;
		height: .2em;
		background: #fff;
		transform-origin: center;