@import '~styles/env/entry.styl';

.button
	position: absolute;
	cursor: pointer;
	outline: none;
	transition: opacity $glb-anim-drt, color $glb-anim-drt
	opacity .7
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	color: inherit;

	&:hover:not([disabled])
		opacity 1

	&[disabled]
		opacity .3
.icon
	display: block;
	width: 2.4em;
	height: 2.4em;
	border-right: .2em solid;
	border-top: .2em solid;
	transform: translate(-75%, -50%) rotate(45deg);
	position: absolute;
	top: 50%;
	left: 50%;

.left
	.icon
		transform: translate(-25%, -50%) scaleX(-1) rotate(45deg);